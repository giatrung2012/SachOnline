
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DangNhap</title>
    @Styles.Render("~/Content/css")
    <style type="text/css">
        td {
            height: 40px;
        }
    </style>
</head>
<body>
    <h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
    <h2 style="text-align:center;">ĐĂNG NHẬP</h2>
    <table align="center">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            if (Request.Cookies["TenDN"] != null && Request.Cookies["MatKhau"] != null)
            {
                <tr>
                    <td>Tên đăng nhập: </td>
                    <td>
                        @Html.TextBox("TenDN", Request.Cookies["TenDN"].Value)
                        @ViewData["Err1"]
                    </td>
                </tr>
                <tr>
                    <td>Mật khẩu: </td>
                    <td>
                        @Html.Password("MatKhau", Request.Cookies["MatKhau"].Value)
                        @ViewData["Err2"]
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>Tên đăng nhập: </td>
                    <td>
                        @Html.TextBox("TenDN")
                        @ViewData["Err1"]
                    </td>
                </tr>
                <tr>
                    <td>Mật khẩu: </td>
                    <td>
                        @Html.Password("MatKhau")
                        @ViewData["Err2"]
                    </td>
                </tr>
            }
            <tr>
                <td></td>
                <td>
                    @Html.CheckBox("remember") 
                    <span style="font-style:italic">Nhớ tài khoản</span>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                </td>
            </tr>
        }
    </table>
</body>
</html>
