<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <!-- Custom styles -->
    @RenderSection("customStyles", required: false)
</head>
<body>
    <nav class="navbar navbar-inverse">
        <!--navbar-fixed-top-->
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navAdmin" aria-expanded="false">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Home")">
                    SachOnlineAdmin
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling
            (Chứa nội dung của navbar) -->
            <div class="collapse navbar-collapse" id="navAdmin">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Sach")">QUẢN LÝ SÁCH</a> </li>
                    <li><a href="@Url.Action("Index","ChuDe")">QUẢN LÝ CHỦ ĐỀ</a> </li>
                    <li>
                        <a href="@Url.Action("Index","NhaXuatBan")">
                            QUẢN LÝ NHÀ XUẤT
                            BẢN
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","KhachHang")">
                            QUẢN LÝ KHÁCH
                            HÀNG
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","DonHang")">QUẢN LÝ ĐƠN HÀNG</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-->
    </nav>

    <div class="container">
        @if (TempData["AlertMessage"] != null)
        {
            <div id="alertBox" class="alert @TempData["AlertType"] hide">
                @TempData["AlertMessage"]
            </div>
        }

        @RenderBody()
    </div>

    <footer class="container well">
        <div style="text-align:center;">
            <p>ADMIN</p>
        </div>
    </footer>

    <!-- jQuery library -->
    @Scripts.Render("~/bundles/jquery")
    <!-- Latest compiled JavaScript -->
    @Scripts.Render("~/bundles/bootstrap")
    <!-- Custom scripts -->
    @RenderSection("customScripts", required: false)
</body>
</html>
