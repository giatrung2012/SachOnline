@model IEnumerable<SachOnline.Models.NHAXUATBAN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>DANH SÁCH NHÀ XUẤT BẢN</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create", "Nxb", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenNXB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DienThoai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNXB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaNXB }, new { @class = "btn btn-warning" }) 
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNXB }, new { @class = "btn btn-info" }) 
                @Html.ActionLink("Xoá", "Delete", new { id = item.MaNXB }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
